/* =========================
scores and statistics
========================= */

.statistics {
    clear: both;	
}

.statistics h3 {
    font-size: 1.75em;
    font-weight: bold;
    margin: .25em 0 0 0;
    padding: 0;
}

.statistics .score {
   border: 1px solid #339933;
   font-size: 2em;
   font-weight: bold;
   text-align: center;
   float: left;
   padding: .5em; 
   margin: .25em;
   width: 80px;
}

.statistics .text {
    padding: 1em;	
}

.statistics .description {
    float: left;
    padding-left: .5em;
}

.statistics .description span {

}

.statistics .item {
    padding-left: 7px;
    margin-bottom: .3em;
}

/*
.statistics .item:hover {
    background: #ddd;
    border-left: 7px solid #339933;
    padding-left: 0px;
    cursor: pointer;
}*/

.statistics .item.active {
    background: #ddd;
    border-left: 7px solid #339933;
    padding-left: 0px;
    cursor: pointer;
}

/* =========================
statistics module
========================= */

.statistics-comparisons {
    border-collapse: collapse;	
}

.statistics-comparisons > thead > tr> td,
.statistics-comparisons > tbody > tr > td {
    border-style: dotted;
    border-width: 0 0 1px 0;
    border-color: #ccc;
    border-spacing: 0px;
    padding: 0px;
}
